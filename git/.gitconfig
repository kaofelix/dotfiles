# -*- coding: utf-8; mode:conf -*-
[user]
name = Kao FÃ©lix
email = me@kaofelix.dev

[color]
diff = auto
status = auto
branch = auto
interactive = auto

[core]
excludesfile = /Users/kaofelix/.global-gitignore
autocrlf = input
pager = LESS='FR --redraw-on-quit' delta

[interactive]
diffFilter = delta --color-only

[delta]
navigate = true
side-by-side = true

[merge]
conflictStyle = zdiff3

[gui]
fontdiff = -family Menlo -size 11 -weight normal -slant roman -underline 0 -overstrike 0

[alias]
st = status
ci = commit
co = checkout
br = branch
l  = log
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
pr = pull --rebase
pff = pull --ff-only
amend = commit --amend
fix = commit --amend --no-edit
di = diff
ds = diff --staged
# ds = diff --stat=160,120
dh1 = diff HEAD~1
aa = add --all
ff = merge --ff-only
noff = merge --no-ff
fa = fetch --all
pom = push origin master
spp = "stash && pull --rebase && stash pop"

# Divergence (commits we added and commits remote added)
div = divergence

# Goodness (summary of diff lines added/removed/total)
gn = goodness
gnc = goodness --cached

# Fancy logging.
#   h = head
#   hp = head with patch
#   r = recent commits, only current branch
#   ra = recent commits, all reachable refs
#   l = all commits, only current branch
#   la = all commits, all reachable refs
head = !git r -1
h = !git head
hp = "!. ~/.githelpers && show_git_head"
r = !GIT_NO_PAGER=1 git l -30
ra = !git r --all
l = "!. ~/.githelpers && pretty_git_log"
la = !git l --all        

[branch]
autosetuprebase = always

[rebase]
autoStash = true

[push]
default = simple

[filter "media"]
clean = git-media-clean %f
smudge = git-media-smudge %f

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
required = true
process = git-lfs filter-process
